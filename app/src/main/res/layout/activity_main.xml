<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quecomo.MainActivity">

    <Button
        android:id="@+id/botonDamePlato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:onClick="onClick"
        android:text="¡Dime plato!"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="208dp" />

    <TextView
        android:id="@+id/dishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:width="250dp"
        android:height="50dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/addRecipeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showAddDishActivity"
        android:text="Añadir plato"
        android:textSize="18sp"
        android:layout_below="@+id/dishName"
        android:layout_alignRight="@+id/dishName"
        android:layout_alignEnd="@+id/dishName"
        android:layout_marginTop="88dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/addRecipeButton"
        android:layout_alignLeft="@+id/addRecipeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/addRecipeButton"
        android:layout_alignStart="@+id/addRecipeButton"
        android:layout_marginBottom="16dp"
        android:onClick="showAllDishesActivity"
        android:text="Mostrar platos"
        android:textSize="18sp" />


</RelativeLayout>
