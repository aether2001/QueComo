<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quecomo.MainActivity">

    <Button
        android:id="@+id/botonDamePlato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:onClick="onClick"
        android:text="Â¡Dime plato!"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="208dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/dishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:width="250sp"
        android:height="80sp"
        android:textSize="20sp"
        android:layout_below="@+id/botonDamePlato"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56sp" />


    <Button
        android:id="@+id/addRecipeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dishName"
        android:layout_alignRight="@+id/dishName"
        android:layout_below="@+id/dishName"
        android:layout_marginTop="76dp"
        android:onClick="showAddDishActivity"
        android:text="@string/addDish"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/addRecipeButton"
        android:layout_alignRight="@+id/addRecipeButton"
        android:layout_below="@+id/addRecipeButton"
        android:layout_marginTop="19dp"
        android:onClick="showAllDishesActivity"
        android:text="@string/showAllDishes"
        android:textSize="18sp" />


</RelativeLayout>
